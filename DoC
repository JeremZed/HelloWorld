Apparence
  - taille            : float
  - poids             : float
  - peau              : Peau
  - cheveux           : Cheveux
  - pilosite          : Pilosite
  - corpulence        : Corpulence
  - getTaille()
  - setTaille(int)
  - getPeau()
  - setPeau(Peau)
  - getCheveux()
  - setCheveux(Cheveux)
  - getPilosite()
  - setPilosite(Pilosite)
  - getCorpulence()
  - setCorpulence(Corpulence)
  - getPoids()
  - calculPoids()
  
abstract Race
  - libelle           : string
  - description       : string
  - getLibelle()
  - setLibelle(str)
  - getDescription()
  - setDescription(str)
  
Humain extends Race
  - __construct() > Race.setLibelle(str)
  
Grems extends Race
  - __construct() > Race.setLibelle(str)
  
Touchar extends Race
  - __construct() > Race.setLibelle(str)
  
abstract Classe
  - libelle           : string
  - description       : string
  - skills            : Collection Skill
  - getLibelle()
  - setLibelle(str)
  - getDescription()
  - setDescription(str)
  - getSkills()
  - setSkills(Collection Skill)
  - getSkill(str)
  
Guerrier extends Classe
  - __construt() > Classe.setLibelle(str)
  
Rodeur extends Classe
  - __construt() > Classe.setLibelle(str)
  
Mage extends Classe
  - __construt() > Classe.setLibelle(str)
  
Moine extends Classe
  - __construt() > Classe.setLibelle(str)
  
abstract Skill
  - libelle           : string
  - description       : string
  - type              : string
  - value             : string
  - caracteristique   : string
  - getLibelle()
  - setLibelle(str)
  - getDescription()
  - setDescription(str)
  - getType()
  - setType(str)
  - getValue()
  - setValue(str)
  - getCaracteristique()
  - setCaracteristique(str)
  
SkillBouleDeFeu extends Skill
  - __construct() > Skill.setLibelle(str)
  
SkillTirTendu extends Skill
  - __construct() > Skill.setLibelle(str)
  
SkillFrappeFeroce extends Skill
  - __construct() > Skill.setLibelle(str)
  
SkillEclatDeLumiere extends Skill
  - __construct() > Skill.setLibelle(str)

abstract Personnage
  - nom               : string
  - droitier          : bool
  - gaucher           : bool
  - experience        : int
  - sexe              : Sexe
  - apparence         : Apparence
  - race              : Race
  - classe            : Classe
  - getNom()
  - setNom(str)
  - getDroitier()
  - setDroitier(bool)
  - getGaucher()
  - setGaucher(bool)
  - getExperience()
  - setExperience(int)
  - getSexe()
  - setSexe(Sexe)
  - getApparence()
  - setApparence(Apparence)
  - getRace()
  - setRace(Race)
  - getClasse()
  - setClasse(Classe)
  - getNiveau()
  - getCalculNiveau()
  
Player extends Personnage
  - __construct() > Personnage.setNom(str)  
