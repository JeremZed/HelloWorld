
abstract Sexe
  - libelle           : string
  - setLibelle(str)
  - getLibelle()
  
Masculin extends Sexe
  - __construct() > Sexe.setLibelle(str)
  
Feminin extends Sexe
  - __construct() > Sexe.setLibelle(str)

abstract Peau
  - libelle           : string
  - src               : string // Path oÃ¹ trouver la reprÃ©sentation de la peau
  - setLibelle(str)
  - getLibelle()
  - setSrc(str)
  - getSrc()
  
PeauNoir extends Peau
  - __construct() > Peau.setLibelle(str)

PeauBleue extends Peau
  - __construct() > Peau.setLibelle(str)
  
PeauBlanche extends Peau
  - __construct() > Peau.setLibelle(str)
  - getOdeur()
  
abstract Cheveux
  - libelle           : string
  - couleur           : string
  - coupe             : string
  - src               : string
  - getLibelle()
  - setLibelle(str)
  - getCouleur()
  - setCouleur(str)
  - getCoupe()
  - setCoupe(str)
  - getSrc()
  - setSrc(str)
  
CheveuxLong extends Cheveux
  - __construct() > Cheveux.setLibelle(str)
  
CheveuxCourt extends Cheveux
  - __construct() > Cheveux.setLibelle(str)
  
CheveuxRase extends Cheveux
  - __construct() > Cheveux.setLibelle(str)
  
abstract Pilosite
  - libelle
  - couleur
  - src
  - getLibelle()
  - setLibelle(str)
  - getCouleur()
  - setCouleur(str)
  - getSrc()
  - setSrc($str)
  
PilositeBarbe extends Pilosite
  - __construct() > Pilosite.setLibelle(str)
  
