
abstract Sexe
  - libelle           : string
  - setLibelle(str)
  - getLibelle()
  
Masculin extends Sexe
  - __construct() > Sexe.setLibelle(str)
  
Feminin extends Sexe
  - __construct() > Sexe.setLibelle(str)

abstract Peau
  - libelle           : string
  - src               : string // Path où trouver la représentation de la peau
  - setLibelle(str)
  - getLibelle()
  - setSrc(str)
  - getSrc()
  
PeauNoir extends Peau
  - __construct() > Peau.setLibelle(str)

PeauBleue extends Peau
  - __construct() > Peau.setLibelle(str)
  
PeauBlanche extends Peau
  - __construct() > Peau.setLibelle(str)
  - getOdeur()
  
abstract Cheveux
  - libelle           : string
  - couleur           : string
  - coupe             : string
  - src               : string
  - getLibelle()
  - setLibelle(str)
  - getCouleur()
  - setCouleur(str)
  - getCoupe()
  - setCoupe(str)
  - getSrc()
  - setSrc(str)
  
CheveuxLong extends Cheveux
  - __construct() > Cheveux.setLibelle(str)
  
CheveuxCourt extends Cheveux
  - __construct() > Cheveux.setLibelle(str)
  
CheveuxRase extends Cheveux
  - __construct() > Cheveux.setLibelle(str)
  
abstract Pilosite
  - libelle
  - couleur
  - src
  - getLibelle()
  - setLibelle(str)
  - getCouleur()
  - setCouleur(str)
  - getSrc()
  - setSrc($str)
  
PilositeBarbe extends Pilosite
  - __construct() > Pilosite.setLibelle(str)
  
PilositeAucune extends Pilosite
  - __construct() > Pilosite.setLibelle(str)
  
abstract Corpulence
  - libelle           : string
  - src               : string
  - getLibelle()
  - setLibelle(str)
  - getSrc()
  - setSrc(str)
  
CorpulenceGros extends Corpulence
  - __construct() > Corpulence.setLibelle(str)
  
CorpulenceMince extends Corpulence
  - __construct() > Corpulence.setLibelle(str)
  
CorpulenceAthletique extends Corpulence
  - __construct() > Corpulence.setLibelle(str)
  
Apparence
  - taille            : float
  - poids             : float
  - peau              : Peau
  - cheveux           : Cheveux
  - pilosite          : Pilosite
  - corpulence        : Corpulence
  - getTaille()
  - setTaille(int)
  - getPeau()
  - setPeau(Peau)
  - getCheveux()
  - setCheveux(Cheveux)
  - getPilosite()
  - setPilosite(Pilosite)
  - getCorpulence()
  - setCorpulence(Corpulence)
  - getPoids()
  - calculPoids()
  
abstract Race
  - libelle           : string
  - description       : string
  - getLibelle()
  - setLibelle(str)
  - getDescription()
  - setDescription(str)
  
Humain extends Race
  - __construct() > Race.setLibelle(str)
  
Grems extends Race
  - __construct() > Race.setLibelle(str)
  
Touchar extends Race
  - __construct() > Race.setLibelle(str)
  
abstract Classe
  - libelle           : string
  - description       : string
  - getLibelle()
  - setLibelle(str)
  - getDescription()
  - setDescription(str)

abstract Personnage
  - nom               : string
  - droitier          : bool
  - gaucher           : bool
  - experience        : int
  - sexe              : Sexe
  - apparence         : Apparence
  - race              : Race
  - classe            : Classe
