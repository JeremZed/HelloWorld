
abstract Sexe
  - libelle           : string
  - setLibelle(str)
  - getLibelle()
  
Masculin extends Sexe
  - __construct() > Sexe.setLibelle(str)
  
Feminin extends Sexe
  - __construct() > Sexe.setLibelle(str)

Peau
  - libelle           : string
  - src               : string // Path où trouver la représentation de la peau
  - setLibelle(str)
  - getLibelle()
  - setSrc(str)
  - getSrc()
  
Cheveux
  - libelle           : string
  - couleur           : string
  - coupe             : string
  - src               : string
  - getLibelle()
  - setLibelle(str)
  - getCouleur()
  - setCouleur(str)
  - getCoupe()
  - setCoupe(str)
  - getSrc()
  - setSrc(str)
  
Pilosite
  - libelle
  - couleur
  - src
  - getLibelle()
  - setLibelle(str)
  - getCouleur()
  - setCouleur(str)
  - getSrc()
  - setSrc($str)
  
Corpulence
  - libelle           : string
  - src               : string
  - getLibelle()
  - setLibelle(str)
  - getSrc()
  - setSrc(str)
  
Apparence
  - taille            : float
  - poids             : float
  - peau              : Peau
  - cheveux           : Cheveux
  - pilosite          : Pilosite
  - corpulence        : Corpulence
  - getTaille()
  - setTaille(int)
  - getPeau()
  - setPeau(Peau)
  - getCheveux()
  - setCheveux(Cheveux)
  - getPilosite()
  - setPilosite(Pilosite)
  - getCorpulence()
  - setCorpulence(Corpulence)
  - getPoids()
  - calculPoids()

abstract Personnage
  - nom               : string
  - droitier          : bool
  - gaucher           : bool
  - experience        : int
  - sexe              : Sexe
  - apparence         : Apparence
  - 
