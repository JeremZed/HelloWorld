
abstract Sexe
  - libelle           : string
  - setLibelle(str)
  - getLibelle()
  
Masculin extends Sexe
  - __construct() > Sexe.setLibelle(str)
  
Feminin extends Sexe
  - __construct() > Sexe.setLibelle(str)

Peau
  - libelle
  - src               // Path où trouver la représentation de la peau
  - setLibelle(str)
  - getLibelle()
  - setSrc(str)
  - getSrc()
  
Cheveux
  - libelle
  - couleur
  - coupe
  - src
  - getLibelle()
  - setLibelle(str)
  - getCouleur()
  - setCouleur(str)
  - getCoupe()
  - setCoupe(str)
  - getSrc()
  - setSrc(str)
  
Pilosite
  - libelle
  - couleur
  - src
  - getLibelle()
  - setLibelle(str)
  - getCouleur()
  - setCouleur(str)
  - getSrc()
  - setSrc($str)

Apparence
  - taille            : float
  - peau              : Peau
  - cheveux           : Cheveux
  - pilosite          : Pilosite

abstract Personnage
  - nom               : string
  - droitier          : bool
  - gaucher           : bool
  - experience        : int
  - sexe              : Sexe
  - apparence         : Apparence
